<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2 mt-3">
                <form method="POST" action="/listings">
                    <h3>Create a new Listing</h3>
                    <div class="form-group">
                        <label for="title" class="form-label">Title: </label>
                        <input name="title" id="title" class="form-control" type="text" placeholder="Enter Title" required>
                    </div>
                    <div class="form-group">
                        <label for="description" class="form-label">Description: </label>
                        <textarea class="form-control" name="description" id="description" 
                            placeholder="Enter Description" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="image" class="form-label">Image: </label>
                        <input class="form-control" name="image" id="image" type="text" placeholder="Enter Image Link">
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="form-label" for="price">Price: </label>
                            <input class="form-control" name="price" id="price" type="number" placeholder="Enter Price" required>
                        </div>
                        <div class="form-group col-md-8">
                            <label class="form-label" for="country">country:</label>
                            <input class="form-control" name="country" id="country" type="text"
                                placeholder="Enter country" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="location">Location: </label>
                        <input class="form-control" name="location" id="location" type="text"
                            placeholder="Enter Location" required>
                    </div>
                    <button class="btn btn-dark btn-add" type="submit">Add</button>
                    <br>
                    <br>
                </form>
            </div>
        </div>
    </body>