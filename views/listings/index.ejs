<% layout('/layouts/boilerplate') %>
<body>
    <h3 class="heading mt-3 mb-3">All listings:</h3>
    <!-- <form method="GET" action="/listings/new"> <button type="submit">New</button> </form> -->
    <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 rows-cols-1"> <!--REVISE row-cols-xl-4 etc-->
    <% for(listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col">
        <img class="card-img-top" src="<%= listing.image.url %>" alt="listing Image">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <strong><p class="card-text"><%= listing.title %></p></strong>
          <!-- <br> -->
          <strong><p> &#8377;<%= listing.price.toLocaleString("en-IN") %></strong> night</p>
        </div>
      </div>
      <% } %>
    </a>
    </div>
</body>
