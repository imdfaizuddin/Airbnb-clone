<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2 mt-3">
                <form method="POST" action="/listings/<%= listing._id%>?_method=PUT" novalidate
                    class="needs-validation">
                    <h3>Edit Listing</h3>
                    <div class="form-group">
                        <label class="form-label" for="title">Title: </label>
                        <input class="form-control" name="listing[title]" id="title" type="text"
                            value="<%= listing.title %>" required>
                        <div class="invalid-feedback">
                            Please Enter Title.
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="description">Description: </label>
                        <textarea class="form-control" name="listing[description]" id="description"
                            required><%= listing.description %></textarea>
                        <div class="invalid-feedback">
                            Please Enter Description.
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="image">Image: </label>
                        <input class="form-control" name="listing[image][url]" id="image" type="text"
                            value="<%= listing.image.url %>" required>
                        <div class="invalid-feedback">
                            Please Enter URl.
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="form-label" for="price">Price: </label>
                            <input class="form-control" name="listing[price]" id="price" type="text"
                                value="<%= listing.price %>" required>
                            <div class="invalid-feedback">
                                Please Enter Price.
                            </div>
                        </div>
                        <div class="form-group col-md-8">
                            <label class="form-label" for="country">country:</label>
                            <input class="form-control" name="listing[country]" id="country" type="text"
                                value="<%= listing.country %>" required>
                            <div class="invalid-feedback">
                                Please Enter Country.
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="location">Location: </label>
                        <input class="form-control" name="listing[location]" id="location" type="text"
                            value="<%= listing.location %>" required>
                        <div class="invalid-feedback">
                            Please Enter Location.
                        </div>
                    </div>

                    <button class="btn btn-primary btn-add" type="Edit">Submit</button>
                </form>
            </div>
        </div>
    </body>

    </html>