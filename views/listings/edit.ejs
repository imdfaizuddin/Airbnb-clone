<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2 mt-3">
                <form method="POST" action="/listings/<%= listing._id%>?_method=PUT">
                    <h3>Edit Listing</h3>
                    <div class="form-group">
                        <label class="form-label" for="title">Title: </label>
                        <input class="form-control" name="listing[title]" id="title" type="text"
                            value="<%= listing.title %>">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="description">Description: </label>
                        <textarea class="form-control" name="listing[description]" id="description"><%= listing.description %></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="image">Image: </label>
                        <input class="form-control" name="listing[image][url]" id="image" type="text"
                            value="<%= listing.image.url %>">
                    </div>
                    <div class="row">
                    <div class="form-group col-md-4">
                        <label class="form-label" for="price">Price: </label>
                        <input class="form-control" name="listing[price]" id="price" type="text"
                            value="<%= listing.price %>">
                    </div>
                    <div class="form-group col-md-8">
                        <label class="form-label" for="country">country:</label>
                        <input class="form-control" name="listing[country]" id="country" type="text"
                            value="<%= listing.country %>">
                    </div>
                </div>
                    <div class="form-group">
                        <label class="form-label" for="location">Location: </label>
                        <input class="form-control" name="listing[location]" id="location" type="text"
                            value="<%= listing.location %>">
                    </div>

                    <button class="btn btn-primary btn-add" type="Edit">Submit</button>
                </form>
            </div>
        </div>
    </body>

    </html>